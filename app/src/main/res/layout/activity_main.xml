<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/linear_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/switch_layout"
    android:layout_alignParentLeft="true"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/fragment_city_list"
        class="myweather.silantyevmn.ru.weather.CityListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/switch_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <Switch
        android:id="@+id/switchWind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_wind" />

    <Switch
        android:id="@+id/switchPressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_pressure" />
</LinearLayout>


</RelativeLayout>

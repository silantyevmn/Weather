<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="myweather.silantyevmn.ru.weather.CityDetailPressureAndWindFragment">

    <LinearLayout
        android:id="@+id/wind_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_wind" />

        <TextView
            android:id="@+id/textView_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop_default"
            android:text="ветер"
            android:textSize="@dimen/textSize25" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pressure_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_pressure" />

        <TextView
            android:id="@+id/textView_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop_default"
            android:text="давление"
            android:textSize="@dimen/textSize25" />
    </LinearLayout>

</LinearLayout>
